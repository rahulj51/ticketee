<% title(@project.name, "Projects") %>

<header>
  <h1><%= @project.name %></h1>
  <p><%= @project.description %></p>
  <ul class="actions">
    <li> <%= link_to "Edit Project", edit_project_path(@project), class: "edit" %></li>
    <li> <%= link_to "Delete Project", project_path(@project),
                     method: :delete,
                     data: {confirm: "Are you sure"},
                     class: "delete" %></li>
  </ul>
</header>


