<% title(@project.name, "Projects") %>

<div class="page-header">
  <h1><%= @project.name %></h1>
  <p><%= @project.description %></p>
  <ul class="actions">
    <li> <%= link_to fa_icon("pencil") + " Edit Project", edit_project_path(@project), class: "btn btn-primary" %></li>
    <li> <%= link_to fa_icon("trash") + " Delete Project", project_path(@project),
                     method: :delete,
                     data: {confirm: "Are you sure"},
                     class: "btn btn-danger"%></li>
  </ul>
</div>


