<% title(@project.name, "Projects") %>

<div id="ticket">
  <header>
    <h1><%= @ticket.name %></h1>
    <ul class="actions">
      <li> <%= link_to "Edit Ticket", edit_project_ticket_path(@project,@ticket), class: "edit" %></li>
      <li> <%= link_to "Delete Ticket", project_ticket_path(@project, @ticket),
                       method: :delete,
                       data: {confirm: "Are you sure"},
                       class: "delete" %></li>
    </ul>
  </header>

  <header>
    <h4>Project: <%= link_to @project.name, @project %></h4>
  </header>

  <table id="attributes">
    <tr>
      <th>Author:</th>
      <td><%= @ticket.author.email %></td>
    </tr>
    <tr>
      <th>Created:</th>
      <td><%= time_ago_in_words(@ticket.created_at) %> ago</td>
    </tr>
  </table>

  <%= simple_format(@ticket.description) %>
</div>

